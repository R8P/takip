<div class="container">
    <div class="row text-center">
        <div class="col-md-4 mt-5"> 
            <h2 class="addRecord_title">KAYIT EKLE</h2>
        </div>
        <div class="col-md-12">
            <form action="/records/save" method="POST">
                    <div class="form-group">
                        <input class="form-control" name="initialTime" type="time" placeholder="Başlangıç saati *"
                            required="required" data-validation-required-message="Lütfen başlangıç zamanını girin.">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="initialKm" type="number" placeholder="Başlangıç KM*"
                            required="required" data-validation-required-message="Please enter your username.">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="from" type="text" placeholder=" Başlangıç yeri*"
                            required="required" data-validation-required-message="Please enter your username.">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="destination" type="text" placeholder="Varış yeri *"
                            required="required" data-validation-required-message="Please enter your username.">     
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="arrivalTime" type="time" placeholder="Varış saati *"
                            required="required" data-validation-required-message="Please enter your username.">  
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="arrivalKm" type="number" placeholder="Varış KM *"
                            required="required" data-validation-required-message="Please enter your username.">    
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="plateNo">
                            {{#each vehicles}}
                            <option value="{{id}}">{{plate}}</option>
                            {{/each}}
                        </select>
                    </div>
                     <div class="form-group">
                        <select class="form-control" name="city">
                            {{#each cities}}
                            <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                    <div class="form-group text-center">
                        <input type="submit" name="btn" value="Kaydet" class="btn btn-outline-danger login_btn">
                    </div>
                </div>
        
        </form>
        </div>
    </div>

</div>